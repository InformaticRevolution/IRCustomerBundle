{% trans_default_domain 'ir_customer' %}

<div class="page-header">
    <h1>{{ 'customer.new.title'|trans }}</h1>
</div>

<form action="{{ path('ir_customer_new') }}" {{ form_enctype(form) }} method="POST" class="form-horizontal" novalidate>
    {% include 'IRCustomerBundle:Customer:form.html.twig' %}
    <div class="form-group">
        <div class="col-lg-offset-2 col-lg-10">
            <button type="submit" class="btn btn-primary">{{ 'customer.new.save'|trans }}</button>
        </div>
    </div>         
</form>