{% trans_default_domain 'ir_customer' %}

<div class="page-header">
    <h1>{{ 'customer.list.title'|trans }}</h1>
</div>    

<div class="panel panel-default">
    <div class="panel-body">
        <a href="{{ path('ir_customer_new') }}" class="btn btn-primary">
            <i class="glyphicon glyphicon-plus"></i> {{ 'customer.action.new'|trans }}
        </a>
    </div>
</div>        

{% if customers|length %}
<table class="table table-striped">
    <thead>
        <tr>
            <th>{{ 'customer.full_name'|trans }}</th>  
            <th>{{ 'customer.email'|trans }}</th> 
            <th>{{ 'customer.enabled'|trans }}</th> 
            <th></th>             
        </tr>
    </thead>

    <tbody>
    {% for customer in customers %}
        <tr>
            <td>{{ customer.fullName }}</td>
            <td>{{ customer.email }}</td>
            <td>{{ customer.email }}</td>
            <td>
                <i class="glyphicon glyphicon-{{ customer.enabled ? 'ok' : 'remove' }}"></i>         
            </td>
            <td>
                <div class="pull-right">
                    <a href="{{ path('ir_customer_show', {'id': customer.id}) }}" class="btn btn-default">
                        <i class="glyphicon glyphicon-list"></i>
                    </a>                     
                    <a href="{{ path('ir_customer_edit', {'id': customer.id}) }}" class="btn btn-primary">
                        <i class="glyphicon glyphicon-edit"></i>
                    </a>   
                    <a href="{{ path('ir_customer_delete', {'id': customer.id}) }}" class="btn btn-danger">
                        <i class="glyphicon glyphicon-trash"></i>
                    </a>                            
                </div>               
            </td>               
        </tr>
    {% endfor %}        
    </tbody>
</table>
{% else %}
<div class="well">
    {{ 'customer.list.no_results'|trans }}
</div>
{% endif %}