{% trans_default_domain 'ir_customer' %}

<div class="page-header">
    <h1>{{ 'address.list.title'|trans }}</h1>
</div>

<div class="well well-sm">
    <a href="{{ path('ir_customer_address_new') }}" class="btn btn-primary">{{ 'address.action.new'|trans }}</a>
</div>

{% if addresses|length %}
<div>
    <ul>
    {% for address in addresses %}
        <li>
            <address>
                <strong>{{ address.fullName }}</strong><br />
                {{ address.street }},<br />
                {{ address.postalCode }} {{ address.city }}<br />
                {{ address.country }}
            </address>
            <div class="btn-group">
                <a href="{{ path('ir_customer_address_edit', {'id': address.id}) }}" class="btn btn-sm btn-default">
                    <i class="glyphicon glyphicon-edit"></i> {{ 'address.action.edit'|trans }}
                </a>
                <a href="{{ path('ir_customer_address_delete', {'id': address.id}) }}" class="btn btn-sm btn-danger">
                    <i class="glyphicon glyphicon-trash"></i> {{ 'address.action.delete'|trans }}
                </a>
            </div>
        </li>
    {% endfor %}
    </ul>
</div>
{% else %}
<div class="well">
    {{ 'address.list.no_results'|trans }}
</div>
{% endif %}