<?xml version="1.0" encoding="UTF-8" ?>
<constraint-mapping xmlns="http://symfony.com/schema/dic/constraint-mapping"
                    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                    xsi:schemaLocation="http://symfony.com/schema/dic/constraint-mapping 
                                        http://symfony.com/schema/dic/constraint-mapping/constraint-mapping-1.0.xsd">

    <class name="IR\Bundle\CustomerBundle\Model\Customer">
        <property name="email">
            <constraint name="NotBlank">
                <option name="message">ir_customer.customer.email.not_blank</option>
                <option name="groups">
                    <value>CRegistration</value>
                    <value>Account</value>
                    <value>Customer</value>   
                </option>
            </constraint>
            <constraint name="Email">
                <option name="message">ir_customer.customer.email.invalid</option>
                <option name="groups">
                    <value>CRegistration</value>
                    <value>Account</value>
                    <value>Customer</value>
                </option>
            </constraint>
        </property>   
        
        <property name="plainPassword">
            <constraint name="NotBlank">
                <option name="message">ir_customer.customer.password.not_blank</option>
                <option name="groups">
                    <value>CRegistration</value>
                    <value>ResetPassword</value>
                    <value>ChangePassword</value>
                    <value>NewCustomer</value>   
                </option>
            </constraint>
            <constraint name="Length">
                <option name="min">6</option>
                <option name="max">4096</option>
                <option name="minMessage">ir_customer.customer.password.min_length</option>
                <option name="groups">
                    <value>CRegistration</value>
                    <value>ResetPassword</value>
                    <value>ChangePassword</value>
                    <value>Customer</value>
                </option>
            </constraint>
        </property>                                                                
    </class>
    
    <class name="IR\Bundle\CustomerBundle\Model\Address">
        <property name="title">
            <constraint name="NotNull">
                <option name="message">ir_customer.address.title.not_null</option> 
                <option name="groups">
                    <value>Address</value>
                </option>                          
            </constraint>           
        </property>

        <property name="firstName">
            <constraint name="NotBlank">
                <option name="message">ir_customer.address.first_name.not_blank</option> 
                <option name="groups">
                    <value>Address</value>
                </option>                          
            </constraint>
            <constraint name="Length">
                <option name="min">2</option>
                <option name="max">255</option>
                <option name="minMessage">ir_customer.address.first_name.min_length</option>
                <option name="maxMessage">ir_customer.address.first_name.max_length</option> 
                <option name="groups">
                    <value>Address</value>
                </option>                        
            </constraint>
        </property>  
        
        <property name="lastName">
            <constraint name="NotBlank">
                <option name="message">ir_customer.address.last_name.not_blank</option> 
                <option name="groups">
                    <value>Address</value>
                </option>                             
            </constraint>
            <constraint name="Length">
                <option name="min">2</option>
                <option name="max">255</option>
                <option name="minMessage">ir_customer.address.last_name.min_length</option>
                <option name="maxMessage">ir_customer.address.last_name.max_length</option>
                <option name="groups">
                    <value>Address</value>
                </option>                                  
            </constraint>
        </property>
        
        <property name="street">
            <constraint name="NotBlank">
                <option name="message">ir_customer.address.street.not_blank</option>
                <option name="groups">
                    <value>Address</value>
                </option>                   
            </constraint>
            <constraint name="Length">
                <option name="min">2</option>
                <option name="max">255</option>
                <option name="minMessage">ir_customer.address.street.min_length</option>
                <option name="maxMessage">ir_customer.address.street.max_length</option>
                <option name="groups">
                    <value>Address</value>
                </option>                                  
            </constraint>            
        </property>   
        
        <property name="postalCode">
            <constraint name="NotBlank">
                <option name="message">ir_customer.address.postal_code.not_blank</option>
                <option name="groups">
                    <value>Address</value>
                </option>                   
            </constraint>             
        </property>
                
        <property name="city">
            <constraint name="NotBlank">
                <option name="message">ir_customer.address.city.not_blank</option>
                <option name="groups">
                    <value>Address</value>
                </option>                   
            </constraint>
            <constraint name="Length">
                <option name="min">2</option>
                <option name="max">255</option>
                <option name="minMessage">ir_customer.address.city.min_length</option>
                <option name="maxMessage">ir_customer.address.city.max_length</option>
                <option name="groups">
                    <value>Address</value>
                </option>                                  
            </constraint>              
        </property> 
        
        <property name="country">
            <constraint name="NotBlank">
                <option name="message">ir_customer.address.country.not_blank</option>
                <option name="groups">
                    <value>Address</value>
                </option>                   
            </constraint>
        </property>  
        
        <property name="phone">
            <constraint name="NotBlank">
                <option name="message">ir_customer.address.phone.not_blank</option>
                <option name="groups">
                    <value>Address</value>
                </option>                   
            </constraint>           
        </property>         
    </class>
    
</constraint-mapping>        