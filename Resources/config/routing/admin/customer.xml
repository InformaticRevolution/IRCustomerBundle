<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="ir_customer_admin_customer_list" pattern="/">
        <default key="_controller">IRCustomerBundle:Admin/Customer:list</default>
    </route>

    <route id="ir_customer_admin_customer_new" pattern="/new">
        <default key="_controller">IRCustomerBundle:Admin/Customer:new</default>
    </route>  

    <route id="ir_customer_admin_customer_show" pattern="/{id}" methods="GET">
        <default key="_controller">IRCustomerBundle:Admin/Customer:show</default>
    </route>

    <route id="ir_customer_admin_customer_edit" pattern="/{id}/edit">
        <default key="_controller">IRCustomerBundle:Admin/Customer:edit</default>
    </route>

    <route id="ir_customer_admin_customer_delete" pattern="/{id}/delete" methods="GET">
        <default key="_controller">IRCustomerBundle:Admin/Customer:delete</default>
    </route>

</routes>