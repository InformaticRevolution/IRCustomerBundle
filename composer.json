{
    "name": "informaticrevolution/customer-bundle",
    "type": "symfony-bundle",
    "description": "Symfony IRCustomerBundle",
    "keywords": ["customers"],
    "license": "MIT",
    "authors": [
        {
            "name": "Julien Kirsch",
            "email": "informatic.revolution@gmail.com"
        }
    ],
    "require": {
        "php": ">=5.3.2",
        "symfony/framework-bundle": "~2.1",
        "friendsofsymfony/user-bundle": "2.0.x-dev",
        "stof/doctrine-extensions-bundle": "1.1.*"
    },
    "require-dev": {
        "informaticrevolution/address-bundle": "*",
        "symfony/class-loader": "*",
        "symfony/twig-bundle": "*",
        "symfony/finder": "*",
        "symfony/browser-kit": "*",
        "symfony/css-selector": "*",
        "symfony/form": "*",
        "symfony/validator": "*",
        "symfony/yaml": "*",
        "symfony/expression-language": "*",
        "doctrine/doctrine-bundle": "*",
	"doctrine/orm": "*",
        "nelmio/alice": "*"
    },  
    "suggest": {
        "informaticrevolution/address-bundle": "Adds cusomer's address book support",
        "sonata-project/intl-bundle": "Provides helper to the php-intl extension"
    },            
    "config": {
        "bin-dir": "bin"
    },
    "autoload": {
        "psr-0": { "IR\\Bundle\\CustomerBundle": "" }
    },
    "target-dir": "IR/Bundle/CustomerBundle",
    "minimum-stability": "dev",
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        }
    }
}
